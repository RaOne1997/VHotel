@using HotelBooking.Models.DTO

@model List< Room>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<a class="btn bg-primary text-white" asp-area="" asp-controller="Room" asp-action="Create">Create New </a>
<table class="table table-bordered">
    <tr>
        <th>RoomNumber</th>
        <th>RoomTypeRefID</th>
        <th>RoomImage</th>
        <th>RoomLevel</th>
        <th>RoomPrice</th>
        <th>Description</th>


    </tr>

    @foreach (var item in Model)
    {
        var d = "data:image/jpeg;base64," +
        Convert.ToBase64String(item.RoomImage, 0, item.RoomImage.Length);

        <tr>
            <td>@item.RoomNumber</td>
            <td>@item.type.RoomType</td>
            <td><img src="@d" alt="" class="" style="width: 100px;height: 100px;"></td>
            <td>@item.RoomLevel</td>
            <td>@item.RoomPrice.ToString("C0")</td>
            <td>@item.Description.Substring(0,100)</td>
            <td> <a class="btn bg-primary text-white" asp-area="" asp-controller="Room" asp-action="Details" asp-route-id="@item.ID">Details</a></td>
          
        </tr>
    }
</table>










